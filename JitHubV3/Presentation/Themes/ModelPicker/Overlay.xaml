<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--
    Phase 9.3: OverlayCornerRadius parity.
    Phase 9.4: Dedicated smoke brush resource.
  -->

  <CornerRadius x:Key="OverlayCornerRadius">16</CornerRadius>

  <!-- Gap report 3.2: match AI Dev Gallery dialog geometry defaults -->
  <x:Double x:Key="ModelPickerDialogMaxWidth">786</x:Double>
  <x:Double x:Key="ModelPickerDialogMaxHeight">640</x:Double>

  <!-- Smoke layer: theme-derived dark overlay (no hard-coded colors). -->
  <SolidColorBrush x:Key="ModelPickerSmokeBrush" Color="{ThemeResource SystemAltHighColor}" />
  <x:Double x:Key="ModelPickerSmokeOpacity">0.72</x:Double>

  <Style x:Key="ModelPickerDialogBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
    <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="{StaticResource OverlayCornerRadius}" />
    <Setter Property="Padding" Value="{StaticResource DashboardComposePadding}" />
  </Style>

  <Style x:Key="ModelPickerRightPaneBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource CardGradient2Brush}" />
    <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="{StaticResource DashboardRadiusM}" />
    <Setter Property="Padding" Value="{StaticResource DashboardEdgePadding}" />
  </Style>

</ResourceDictionary>
