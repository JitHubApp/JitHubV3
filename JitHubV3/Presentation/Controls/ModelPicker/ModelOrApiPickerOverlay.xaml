<UserControl x:Class="JitHubV3.Presentation.Controls.ModelPicker.ModelOrApiPickerOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:JitHubV3.Presentation.Controls.ModelPicker"
             mc:Ignorable="d">

  <!--
    DataContext: ModelOrApiPickerViewModel
    The root Visibility is bound to IsOpen (bool -> Visibility is supported).
  -->

  <Grid x:Name="Root"
        Visibility="{Binding IsOpen}">

    <Grid.Resources>
      <local:StoredKeyTextConverter x:Key="StoredKeyTextConverter" />

      <!-- Local Models -->
      <DataTemplate x:Key="LocalModelsTemplate" x:DataType="local:LocalModelsPickerViewModel">
        <Grid RowSpacing="{StaticResource DashboardSpacingS}">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <TextBlock x:Uid="ModelPicker.LocalModels.Title"
                     Text="Local models"
                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                     TextWrapping="Wrap" />

          <ListView Grid.Row="1"
                    ItemsSource="{x:Bind Items}"
                    SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
                    SelectionMode="Single"
                    AutomationProperties.Name="Local models">
            <ListView.ItemTemplate>
              <DataTemplate x:DataType="local:LocalModelOptionViewModel">
                <Grid ColumnSpacing="{StaticResource DashboardSpacingS}"
                      RowSpacing="{StaticResource DashboardSpacingXS}"
                      Padding="{StaticResource DashboardEdgePadding}">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>

                  <TextBlock Grid.Row="0"
                             Grid.Column="0"
                             Text="{x:Bind DisplayNameOrId}"
                             TextTrimming="CharacterEllipsis"
                             TextWrapping="NoWrap" />

                  <TextBlock Grid.Row="1"
                             Grid.Column="0"
                             Text="{x:Bind StatusText}"
                             Opacity="0.72"
                             TextWrapping="NoWrap"
                             TextTrimming="CharacterEllipsis" />

                  <ProgressBar Grid.Row="2"
                               Grid.Column="0"
                               Height="6"
                               Minimum="0"
                               Maximum="100"
                               Value="{x:Bind ProgressPercent}"
                               IsIndeterminate="{x:Bind IsProgressIndeterminate}"
                               Visibility="{Binding CanCancel}" />

                  <StackPanel Grid.Row="0"
                              Grid.RowSpan="3"
                              Grid.Column="1"
                              Orientation="Horizontal"
                              Spacing="{StaticResource DashboardSpacingXS}"
                              VerticalAlignment="Center">
                    <Button x:Uid="ModelPicker.LocalModels.Download"
                            Content="Download"
                            MinHeight="44"
                            Command="{x:Bind DownloadCommand}"
                            IsEnabled="{Binding CanDownload}" />

                    <Button x:Uid="ModelPicker.LocalModels.Cancel"
                            Content="Cancel"
                            MinHeight="44"
                            Command="{x:Bind CancelCommand}"
                            IsEnabled="{Binding CanCancel}"
                            Visibility="{Binding CanCancel}" />
                  </StackPanel>
                </Grid>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
        </Grid>
      </DataTemplate>

      <!-- OpenAI -->
      <DataTemplate x:Key="OpenAiTemplate" x:DataType="local:OpenAiPickerViewModel">
        <StackPanel Spacing="{StaticResource DashboardSpacingS}">
          <TextBlock x:Uid="ModelPicker.OpenAi.Title"
                     Text="OpenAI"
                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                     TextWrapping="Wrap" />

          <TextBox x:Uid="ModelPicker.OpenAi.ModelId"
                   Header="Model"
                   Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="e.g. gpt-4o-mini" />

          <TextBox x:Uid="ModelPicker.OpenAi.ApiKey"
                   Header="API key"
                   Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="Paste API key (not displayed after Apply)" />

          <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                     Opacity="0.72"
                     TextWrapping="Wrap" />
        </StackPanel>
      </DataTemplate>

      <!-- Anthropic -->
      <DataTemplate x:Key="AnthropicTemplate" x:DataType="local:AnthropicPickerViewModel">
        <StackPanel Spacing="{StaticResource DashboardSpacingS}">
          <TextBlock x:Uid="ModelPicker.Anthropic.Title"
                     Text="Anthropic"
                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                     TextWrapping="Wrap" />

          <TextBox x:Uid="ModelPicker.Anthropic.ModelId"
                   Header="Model"
                   Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="e.g. claude-3-5-sonnet-latest" />

          <TextBox x:Uid="ModelPicker.Anthropic.ApiKey"
                   Header="API key"
                   Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="Paste API key (not displayed after Apply)" />

          <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                     Opacity="0.72"
                     TextWrapping="Wrap" />
        </StackPanel>
      </DataTemplate>

      <!-- Azure AI Foundry -->
      <DataTemplate x:Key="FoundryTemplate" x:DataType="local:AzureAiFoundryPickerViewModel">
        <StackPanel Spacing="{StaticResource DashboardSpacingS}">
          <TextBlock x:Uid="ModelPicker.Foundry.Title"
                     Text="Azure AI Foundry"
                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                     TextWrapping="Wrap" />

          <TextBox x:Uid="ModelPicker.Foundry.Endpoint"
                   Header="Endpoint"
                   Text="{x:Bind Endpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="https://..." />

          <TextBox x:Uid="ModelPicker.Foundry.ModelId"
                   Header="Model"
                   Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="Model deployment name" />

          <TextBox x:Uid="ModelPicker.Foundry.ApiKeyHeader"
                   Header="API key header name"
                   Text="{x:Bind ApiKeyHeaderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="api-key" />

          <TextBox x:Uid="ModelPicker.Foundry.ApiKey"
                   Header="API key"
                   Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   PlaceholderText="Paste API key (not displayed after Apply)" />

          <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                     Opacity="0.72"
                     TextWrapping="Wrap" />
        </StackPanel>
      </DataTemplate>

      <local:PickerCategoryTemplateSelector x:Key="PickerCategoryTemplateSelector"
                                            LocalModelsTemplate="{StaticResource LocalModelsTemplate}"
                                            OpenAiTemplate="{StaticResource OpenAiTemplate}"
                                            AnthropicTemplate="{StaticResource AnthropicTemplate}"
                                            FoundryTemplate="{StaticResource FoundryTemplate}" />
    </Grid.Resources>

    <!-- Smoke layer + tap-to-close surface -->
    <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Opacity="0.72" />

    <Button x:Name="DismissButton"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding CancelCommand}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutomationProperties.Name="Close AI model picker" />

    <!-- Dialog container -->
    <Border x:Name="Dialog"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="900"
            MaxHeight="720"
            Margin="{StaticResource DashboardEdgePadding}"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource DashboardRadiusL}"
            Padding="{StaticResource DashboardComposePadding}">
      <Border.Shadow>
        <ThemeShadow />
      </Border.Shadow>

      <Grid RowSpacing="{StaticResource DashboardSpacingS}"
            ColumnSpacing="{StaticResource DashboardSpacingS}">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              ColumnSpacing="{StaticResource DashboardSpacingS}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock x:Uid="ModelPickerOverlay.Title"
                     Text="AI"
                     Style="{ThemeResource TitleTextBlockStyle}"
                     TextWrapping="Wrap" />

          <Button x:Uid="ModelPickerOverlay.Close"
                  Grid.Column="1"
                  MinWidth="44"
                  MinHeight="44"
                  Background="Transparent"
                  Command="{Binding CancelCommand}"
                  AutomationProperties.Name="Close">
            <SymbolIcon Symbol="Cancel" />
          </Button>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1"
              ColumnSpacing="{StaticResource DashboardSpacingL}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Left category list -->
          <ListView x:Name="CategoryList"
                    Grid.Column="0"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    SelectionMode="Single"
                    AutomationProperties.Name="Categories">
            <ListView.ItemTemplate>
              <DataTemplate x:DataType="local:ModelPickerCategoryItem">
                <TextBlock Text="{x:Bind DisplayName}"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis" />
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>

          <!-- Right panel placeholder (Phase 3+ fills this with real picker content) -->
          <Border Grid.Column="1"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource DashboardRadiusM}"
                  Padding="{StaticResource DashboardEdgePadding}">
            <ContentControl Content="{Binding ActiveCategory}"
                            ContentTemplateSelector="{StaticResource PickerCategoryTemplateSelector}" />
          </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2"
              ColumnSpacing="{StaticResource DashboardSpacingS}"
              VerticalAlignment="Center">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock x:Uid="ModelPickerOverlay.FooterSummary"
                     Text="{Binding FooterSummary}"
                     Style="{ThemeResource BodyTextBlockStyle}"
                     Opacity="0.72"
                     TextWrapping="NoWrap"
                     TextTrimming="CharacterEllipsis" />

          <Button x:Uid="ModelPickerOverlay.Cancel"
                  Grid.Column="1"
                  Content="Cancel"
                  MinHeight="44"
                  Command="{Binding CancelCommand}" />

          <Button x:Uid="ModelPickerOverlay.Apply"
                  Grid.Column="2"
                  Content="Apply"
                  MinHeight="44"
              Command="{Binding ApplyCommand}"
              IsEnabled="{Binding CanApply}" />
        </Grid>

      </Grid>
    </Border>
  </Grid>
</UserControl>
