<UserControl x:Class="JitHubV3.Presentation.Controls.ModelPicker.ModelOrApiPickerOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:JitHubV3.Presentation.Controls.ModelPicker"
             xmlns:ai="using:JitHubV3.Services.Ai.ModelPicker"
             mc:Ignorable="d">

  <VisualStateManager.VisualStateGroups>
    <VisualStateGroup x:Name="SidePaneStates">
      <VisualState x:Name="SidePaneVisible" />
      <VisualState x:Name="SidePaneCollapsed">
        <VisualState.Setters>
          <Setter Target="SidePaneColumn.Width" Value="0" />
          <Setter Target="CategoryList.Visibility" Value="Collapsed" />
        </VisualState.Setters>
      </VisualState>
    </VisualStateGroup>
  </VisualStateManager.VisualStateGroups>

  <!--
    DataContext: ModelOrApiPickerViewModel
    Phase 2 (gap report 2.1): the overlay manages open/close lifecycle in code-behind
    to support focus and show/hide animations.
  -->

  <Grid x:Name="Root"
        Visibility="Collapsed">

    <Grid.Resources>
      <local:StoredKeyTextConverter x:Key="StoredKeyTextConverter" />

      <!-- Phase 2 (gap report 2.1): simple show/hide animations -->
      <Storyboard x:Key="ShowOverlayStoryboard">
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root" Storyboard.TargetProperty="Visibility">
          <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
        </ObjectAnimationUsingKeyFrames>

        <DoubleAnimation Storyboard.TargetName="SmokeLayer" Storyboard.TargetProperty="Opacity" To="0.72" Duration="0:0:0.18" />
        <DoubleAnimation Storyboard.TargetName="Dialog" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.22" />
        <DoubleAnimation Storyboard.TargetName="DialogTranslate" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.26" />
      </Storyboard>

      <Storyboard x:Key="HideOverlayStoryboard">
        <DoubleAnimation Storyboard.TargetName="SmokeLayer" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.14" />
        <DoubleAnimation Storyboard.TargetName="Dialog" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.14" />
        <DoubleAnimation Storyboard.TargetName="DialogTranslate" Storyboard.TargetProperty="Y" To="24" Duration="0:0:0.14" />
      </Storyboard>

      <!-- Local Models -->
      <DataTemplate x:Key="LocalModelsTemplate" x:DataType="local:LocalModelsPickerViewModel">
        <Grid RowSpacing="{StaticResource DashboardSpacingS}">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Uid="ModelPicker.LocalModels.Title"
                       Text="Local models"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />

            <Button x:Uid="ModelPicker.LocalModels.AddModel"
                    Grid.Column="1"
                    Content="Add model"
                    MinHeight="44">
              <Button.Flyout>
                <MenuFlyout>
                  <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.AddViaUrl"
                                  Text="Add via URL"
                                  Command="{x:Bind ShowAddViaUrlCommand}" />
                  <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.AddLocalPath"
                                  Text="Add local path"
                                  Command="{x:Bind ShowAddLocalPathCommand}" />
                </MenuFlyout>
              </Button.Flyout>
            </Button>
          </Grid>

          <Border Grid.Row="1"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource DashboardRadiusM}"
                  Padding="{StaticResource DashboardEdgePadding}"
                  Visibility="{x:Bind IsAddPanelVisible}">
            <StackPanel Spacing="{StaticResource DashboardSpacingS}">
              <TextBlock x:Uid="ModelPicker.LocalModels.AddPanelTitle"
                         Text="Add model"
                         Style="{ThemeResource BodyStrongTextBlockStyle}"
                         TextWrapping="Wrap" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddModelId"
                       Header="Model ID"
                       Text="{x:Bind AddModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="e.g. my-model" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddDisplayName"
                       Header="Display name (optional)"
                       Text="{x:Bind AddDisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="e.g. My model" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddDownloadUri"
                       Header="Download URL"
                       Text="{x:Bind AddDownloadUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="https://..."
                       Visibility="{x:Bind IsAddViaUrl}" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddInstallPath"
                       Header="Install path"
                       Text="{x:Bind AddInstallPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="C:\\..."
                       Visibility="{x:Bind IsAddLocalPath}" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddArtifactFileName"
                       Header="Artifact file name (optional)"
                       Text="{x:Bind AddArtifactFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="e.g. model.bin"
                       Visibility="{x:Bind IsAddViaUrl}" />

              <TextBox x:Uid="ModelPicker.LocalModels.AddModelCardUri"
                       Header="Model card URL (optional)"
                       Text="{x:Bind AddModelCardUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="https://..." />

              <TextBox x:Uid="ModelPicker.LocalModels.AddLicenseUri"
                       Header="License URL (optional)"
                       Text="{x:Bind AddLicenseUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="https://..." />

              <StackPanel Orientation="Horizontal"
                          Spacing="{StaticResource DashboardSpacingXS}">
                <Button x:Uid="ModelPicker.LocalModels.AddConfirm"
                        Content="Add"
                        MinHeight="44"
                        Command="{x:Bind AddModelCommand}" />
                <Button x:Uid="ModelPicker.LocalModels.AddCancel"
                        Content="Cancel"
                        MinHeight="44"
                        Command="{x:Bind CancelAddModelCommand}" />
              </StackPanel>
            </StackPanel>
          </Border>

          <Grid Grid.Row="2"
                RowSpacing="{StaticResource DashboardSpacingS}">
            <Grid.Resources>
              <CollectionViewSource x:Key="LocalModelsGroupsSource"
                                    IsSourceGrouped="True"
                                    ItemsPath="Items"
                                    Source="{x:Bind Groups, Mode=OneWay}" />
            </Grid.Resources>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource DashboardRadiusM}"
                    Padding="{StaticResource DashboardEdgePadding}"
                  Visibility="{x:Bind ShowEmptyState}">
              <StackPanel Spacing="{StaticResource DashboardSpacingS}">
                <TextBlock x:Uid="ModelPicker.LocalModels.EmptyTitle"
                           Text="No models downloaded"
                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                           TextWrapping="Wrap" />
                <TextBlock x:Uid="ModelPicker.LocalModels.EmptyBody"
                           Text="Download a model from the list, or add one."
                           Opacity="0.72"
                           TextWrapping="Wrap" />
              </StackPanel>
            </Border>

            <ListView Grid.Row="1"
                      ItemsSource="{Binding Source={StaticResource LocalModelsGroupsSource}}"
                      SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
                      SelectionMode="Single"
                      AutomationProperties.Name="Local models">

              <ListView.GroupStyle>
                <GroupStyle>
                  <GroupStyle.HeaderTemplate>
                    <DataTemplate x:DataType="local:LocalModelGroupViewModel">
                      <TextBlock Text="{x:Bind Title}"
                                 Style="{ThemeResource CaptionTextBlockStyle}"
                                 Opacity="0.72"
                                 Padding="{StaticResource DashboardEdgePadding}" />
                    </DataTemplate>
                  </GroupStyle.HeaderTemplate>
                </GroupStyle>
              </ListView.GroupStyle>

              <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:LocalModelOptionViewModel">
                  <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          CornerRadius="{StaticResource DashboardRadiusM}"
                          Margin="{StaticResource DashboardEdgePadding}"
                          Padding="{StaticResource DashboardEdgePadding}">
                    <Grid ColumnSpacing="{StaticResource DashboardSpacingS}"
                          RowSpacing="{StaticResource DashboardSpacingXS}">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                      </Grid.ColumnDefinitions>

                      <SymbolIcon Grid.Column="0"
                                  Symbol="Library"
                                  VerticalAlignment="Top" />

                      <StackPanel Grid.Column="1"
                                  Spacing="{StaticResource DashboardSpacingXS}">
                        <TextBlock Text="{x:Bind DisplayNameOrId}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />

                        <StackPanel Orientation="Horizontal"
                                    Spacing="{StaticResource DashboardSpacingXS}"
                                    Opacity="0.72">
                          <TextBlock Text="{x:Bind StatusText}"
                                     TextWrapping="NoWrap"
                                     TextTrimming="CharacterEllipsis" />
                          <TextBlock Text="Â·"
                                     Visibility="{x:Bind HasFileSize}" />
                          <TextBlock Text="{x:Bind FileSizeText}"
                                     Visibility="{x:Bind HasFileSize}"
                                     TextWrapping="NoWrap"
                                     TextTrimming="CharacterEllipsis" />
                        </StackPanel>

                        <ProgressBar Height="6"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="{x:Bind ProgressPercent}"
                                     IsIndeterminate="{x:Bind IsProgressIndeterminate}"
                                     Visibility="{Binding CanCancel}" />
                      </StackPanel>

                      <StackPanel Grid.Column="2"
                                  Orientation="Horizontal"
                                  Spacing="{StaticResource DashboardSpacingXS}"
                                  VerticalAlignment="Top">
                        <Button x:Uid="ModelPicker.LocalModels.Download"
                                Content="Download"
                                MinHeight="44"
                                Command="{x:Bind DownloadCommand}"
                          IsEnabled="{Binding CanDownload}"
                          Visibility="{Binding CanDownload}" />

                        <Button x:Uid="ModelPicker.LocalModels.Cancel"
                                Content="Cancel"
                                MinHeight="44"
                                Command="{x:Bind CancelCommand}"
                                IsEnabled="{Binding CanCancel}"
                                Visibility="{Binding CanCancel}" />

                        <Button x:Uid="ModelPicker.LocalModels.More"
                                MinHeight="44"
                                MinWidth="44">
                          <Button.Content>
                            <SymbolIcon Symbol="More" />
                          </Button.Content>
                          <Button.Flyout>
                            <MenuFlyout>
                              <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.ViewModelCard"
                                              Text="View model card"
                                              Command="{x:Bind ViewModelCardCommand}"
                                              IsEnabled="{x:Bind CanViewModelCard}" />
                              <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.ViewLicense"
                                              Text="View license"
                                              Command="{x:Bind ViewLicenseCommand}"
                                              IsEnabled="{x:Bind CanViewLicense}" />
                              <MenuFlyoutSeparator />
                              <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.CopyAsPath"
                                              Text="Copy as path"
                                              Command="{x:Bind CopyPathCommand}"
                                              IsEnabled="{x:Bind CanCopyPath}" />
                              <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.OpenContainingFolder"
                                              Text="Open containing folder"
                                              Command="{x:Bind OpenContainingFolderCommand}"
                                              IsEnabled="{x:Bind CanOpenContainingFolder}" />
                              <MenuFlyoutItem x:Uid="ModelPicker.LocalModels.Delete"
                                              Text="Delete"
                                              Command="{x:Bind DeleteCommand}"
                                              IsEnabled="{x:Bind CanDelete}" />
                            </MenuFlyout>
                          </Button.Flyout>
                        </Button>
                      </StackPanel>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ListView.ItemTemplate>
            </ListView>
          </Grid>
        </Grid>
      </DataTemplate>

      <!-- OpenAI -->
      <DataTemplate x:Key="OpenAiTemplate" x:DataType="local:OpenAiPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock x:Uid="ModelPicker.OpenAi.Title"
                       Text="OpenAI"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />

            <TextBox x:Uid="ModelPicker.OpenAi.ModelId"
                     Header="Model"
                     Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="e.g. gpt-4o-mini" />

            <TextBox x:Uid="ModelPicker.OpenAi.ApiKey"
                     Header="API key"
                     Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="Paste API key (not displayed after Apply)" />

            <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Anthropic -->
      <DataTemplate x:Key="AnthropicTemplate" x:DataType="local:AnthropicPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock x:Uid="ModelPicker.Anthropic.Title"
                       Text="Anthropic"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />

            <TextBox x:Uid="ModelPicker.Anthropic.ModelId"
                     Header="Model"
                     Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="e.g. claude-3-5-sonnet-latest" />

            <TextBox x:Uid="ModelPicker.Anthropic.ApiKey"
                     Header="API key"
                     Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="Paste API key (not displayed after Apply)" />

            <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Azure AI Foundry -->
      <DataTemplate x:Key="FoundryTemplate" x:DataType="local:AzureAiFoundryPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock x:Uid="ModelPicker.Foundry.Title"
                       Text="Azure AI Foundry"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />

            <TextBox x:Uid="ModelPicker.Foundry.Endpoint"
                     Header="Endpoint"
                     Text="{x:Bind Endpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="https://..." />

            <TextBox x:Uid="ModelPicker.Foundry.ModelId"
                     Header="Model"
                     Text="{x:Bind ModelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="Model deployment name" />

            <TextBox x:Uid="ModelPicker.Foundry.ApiKeyHeader"
                     Header="API key header name"
                     Text="{x:Bind ApiKeyHeaderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="api-key" />

            <TextBox x:Uid="ModelPicker.Foundry.ApiKey"
                     Header="API key"
                     Text="{x:Bind ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="Paste API key (not displayed after Apply)" />

            <TextBlock Text="{x:Bind HasStoredApiKey, Converter={StaticResource StoredKeyTextConverter}}"
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Windows AI APIs (Phase 6 stub) -->
      <DataTemplate x:Key="WinAiApisTemplate" x:DataType="local:WinAiApisPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock Text="Windows AI APIs"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />
            <TextBlock Text="This picker is not implemented yet in JitHubV3."
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Custom models / ONNX (Phase 6 stub) -->
      <DataTemplate x:Key="OnnxTemplate" x:DataType="local:OnnxPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock Text="Custom models"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />
            <TextBlock Text="This picker is a placeholder. Local/ONNX parity is implemented in later phases (Phase 7)."
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Ollama (Phase 6 stub) -->
      <DataTemplate x:Key="OllamaTemplate" x:DataType="local:OllamaPickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock Text="Ollama"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />
            <TextBlock Text="Ollama support is not implemented yet in JitHubV3."
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <!-- Lemonade (Phase 6 stub) -->
      <DataTemplate x:Key="LemonadeTemplate" x:DataType="local:LemonadePickerViewModel">
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource DashboardRadiusM}"
                Padding="{StaticResource DashboardEdgePadding}">
          <StackPanel Spacing="{StaticResource DashboardSpacingS}">
            <TextBlock Text="Lemonade"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="Wrap" />
            <TextBlock Text="Lemonade support is not implemented yet in JitHubV3."
                       Opacity="0.72"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </DataTemplate>

      <local:PickerCategoryTemplateSelector x:Key="PickerCategoryTemplateSelector"
                                            LocalModelsTemplate="{StaticResource LocalModelsTemplate}"
                                            OpenAiTemplate="{StaticResource OpenAiTemplate}"
                                            AnthropicTemplate="{StaticResource AnthropicTemplate}"
                                            FoundryTemplate="{StaticResource FoundryTemplate}" />

      <local:PickerPaneTemplateSelector x:Key="PickerPaneTemplateSelector" />
    </Grid.Resources>

    <!-- Smoke layer + tap-to-close surface -->
        <Border x:Name="SmokeLayer"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Opacity="0" />

    <Button x:Name="DismissButton"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding CancelCommand}"
          IsTabStop="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutomationProperties.Name="Close AI model picker" />

    <!-- Dialog container -->
    <Border x:Name="Dialog"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="900"
            MaxHeight="720"
            Margin="{StaticResource DashboardEdgePadding}"
            Opacity="0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource DashboardRadiusL}"
            Padding="{StaticResource DashboardComposePadding}">
      <Border.RenderTransform>
        <TranslateTransform x:Name="DialogTranslate" Y="24" />
      </Border.RenderTransform>
      <Border.Shadow>
        <ThemeShadow />
      </Border.Shadow>

      <Grid x:Name="DialogContentRoot"
        RowSpacing="{StaticResource DashboardSpacingS}"
        ColumnSpacing="{StaticResource DashboardSpacingS}">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              ColumnSpacing="{StaticResource DashboardSpacingS}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock x:Uid="ModelPickerOverlay.Title"
                     Text="AI"
                     Style="{ThemeResource TitleTextBlockStyle}"
                     TextWrapping="Wrap" />

            <Button x:Name="HeaderCloseButton"
              x:Uid="ModelPickerOverlay.Close"
                  Grid.Column="1"
                  MinWidth="44"
                  MinHeight="44"
                  Background="Transparent"
                  Command="{Binding CancelCommand}"
                  AutomationProperties.Name="Close">
            <SymbolIcon Symbol="Cancel" />
          </Button>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1"
              ColumnSpacing="{StaticResource DashboardSpacingL}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidePaneColumn" Width="240" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Left category list -->
          <ListView x:Name="CategoryList"
                    Grid.Column="0"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    SelectionMode="Single"
                    AutomationProperties.Name="Categories">
            <ListView.ItemTemplate>
              <DataTemplate x:DataType="local:ModelPickerCategoryItem">
                <Grid MinHeight="44"
                      Padding="{StaticResource DashboardSpacingS}"
                      ColumnSpacing="{StaticResource DashboardSpacingS}">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>

                  <SymbolIcon Width="20"
                              Height="20"
                              Symbol="{x:Bind IconSymbol}" />

                  <TextBlock Grid.Column="1"
                             Text="{x:Bind DisplayName}"
                             TextWrapping="NoWrap"
                             TextTrimming="CharacterEllipsis" />
                </Grid>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>

          <!-- Right panel placeholder (Phase 3+ fills this with real picker content) -->
          <Border Grid.Column="1"
              Background="{StaticResource CardGradient2Brush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource DashboardRadiusM}"
                  Padding="{StaticResource DashboardEdgePadding}">
            <Grid RowSpacing="{StaticResource DashboardSpacingS}">
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>

              <ContentControl Grid.Row="0"
                              Content="{Binding ActiveCategory}"
                              ContentTemplateSelector="{StaticResource PickerPaneTemplateSelector}" />

              <local:DownloadProgressList Grid.Row="1"
                                          DataContext="{Binding DownloadProgressList}" />
            </Grid>
          </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2"
              ColumnSpacing="{StaticResource DashboardSpacingS}"
              VerticalAlignment="Center">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0"
                      Spacing="{StaticResource DashboardSpacingXS}"
                      VerticalAlignment="Center">
            <TextBlock x:Uid="ModelPickerOverlay.Footer.ModelsSelectedLabel"
                       Text="Models selected for this sample"
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Opacity="0.72"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis" />

            <ItemsRepeater ItemsSource="{Binding SelectedModelChips}">
              <ItemsRepeater.Layout>
                <StackLayout Orientation="Horizontal" Spacing="{StaticResource DashboardSpacingS}" />
              </ItemsRepeater.Layout>

              <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="local:SelectedModelChipViewModel">
                  <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          CornerRadius="{StaticResource DashboardRadiusS}"
                          Padding="{StaticResource DashboardRepoItemPadding}">
                    <Grid ColumnSpacing="{StaticResource DashboardSpacingS}"
                          VerticalAlignment="Center">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                      </Grid.ColumnDefinitions>

                      <TextBlock Text="{x:Bind DisplayNameOrId}"
                                 TextWrapping="NoWrap"
                                 TextTrimming="CharacterEllipsis" />

                      <Button Grid.Column="1"
                              MinWidth="44"
                              MinHeight="44"
                              Background="Transparent"
                              AutomationProperties.Name="Remove"
                              Command="{x:Bind RemoveCommand}">
                        <SymbolIcon Symbol="Cancel" />
                      </Button>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
          </StackPanel>

            <Button x:Name="FooterCancelButton"
              x:Uid="ModelPickerOverlay.Cancel"
                  Grid.Column="1"
                  Content="Cancel"
                  MinHeight="44"
                  Command="{Binding CancelCommand}" />

          <Button x:Uid="ModelPickerOverlay.Apply"
                  Grid.Column="2"
              Content="{Binding PrimaryActionText}"
                  MinHeight="44"
              Command="{Binding ApplyCommand}"
              IsEnabled="{Binding CanApply}" />
        </Grid>

      </Grid>
    </Border>
  </Grid>
</UserControl>
