<UserControl x:Class="JitHubV3.Presentation.Controls.ModelPicker.ModelOrApiPickerOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:JitHubV3.Presentation.Controls.ModelPicker"
             mc:Ignorable="d">

  <!--
    DataContext: ModelOrApiPickerViewModel
    The root Visibility is bound to IsOpen (bool -> Visibility is supported).
  -->

  <Grid x:Name="Root"
        Visibility="{Binding IsOpen}">

    <!-- Smoke layer + tap-to-close surface -->
    <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Opacity="0.72" />

    <Button x:Name="DismissButton"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding CancelCommand}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutomationProperties.Name="Close AI model picker" />

    <!-- Dialog container -->
    <Border x:Name="Dialog"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="900"
            MaxHeight="720"
            Margin="{StaticResource DashboardEdgePadding}"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource DashboardRadiusL}"
            Padding="{StaticResource DashboardComposePadding}">
      <Border.Shadow>
        <ThemeShadow />
      </Border.Shadow>

      <Grid RowSpacing="{StaticResource DashboardSpacingS}"
            ColumnSpacing="{StaticResource DashboardSpacingS}">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              ColumnSpacing="{StaticResource DashboardSpacingS}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock x:Uid="ModelPickerOverlay.Title"
                     Text="AI"
                     Style="{ThemeResource TitleTextBlockStyle}"
                     TextWrapping="Wrap" />

          <Button x:Uid="ModelPickerOverlay.Close"
                  Grid.Column="1"
                  MinWidth="44"
                  MinHeight="44"
                  Background="Transparent"
                  Command="{Binding CancelCommand}"
                  AutomationProperties.Name="Close">
            <SymbolIcon Symbol="Cancel" />
          </Button>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1"
              ColumnSpacing="{StaticResource DashboardSpacingL}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Left category list -->
          <ListView x:Name="CategoryList"
                    Grid.Column="0"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    SelectionMode="Single"
                    AutomationProperties.Name="Categories">
            <ListView.ItemTemplate>
              <DataTemplate x:DataType="local:ModelPickerCategoryItem">
                <TextBlock Text="{x:Bind DisplayName}"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis" />
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>

          <!-- Right panel placeholder (Phase 3+ fills this with real picker content) -->
          <Border Grid.Column="1"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource DashboardRadiusM}"
                  Padding="{StaticResource DashboardEdgePadding}">
            <StackPanel Spacing="{StaticResource DashboardSpacingXS}">
              <TextBlock x:Uid="ModelPickerOverlay.PanelTitle"
                         Text="Choose a runtime/model"
                         Style="{ThemeResource BodyStrongTextBlockStyle}"
                         TextWrapping="Wrap" />

              <TextBlock x:Uid="ModelPickerOverlay.PanelBody"
                         Text="This is the Phase 2 shell. Phase 3+ will populate runtimes, models, and download state."
                         Style="{ThemeResource BodyTextBlockStyle}"
                         Opacity="0.72"
                         TextWrapping="Wrap" />

              <TextBlock Text="{Binding SelectedCategory.DisplayName}"
                         Style="{ThemeResource BodyTextBlockStyle}"
                         Opacity="0.72"
                         TextWrapping="Wrap" />
            </StackPanel>
          </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2"
              ColumnSpacing="{StaticResource DashboardSpacingS}"
              VerticalAlignment="Center">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock x:Uid="ModelPickerOverlay.FooterSummary"
                     Text="Selected: (none)"
                     Style="{ThemeResource BodyTextBlockStyle}"
                     Opacity="0.72"
                     TextWrapping="NoWrap"
                     TextTrimming="CharacterEllipsis" />

          <Button x:Uid="ModelPickerOverlay.Cancel"
                  Grid.Column="1"
                  Content="Cancel"
                  MinHeight="44"
                  Command="{Binding CancelCommand}" />

          <Button x:Uid="ModelPickerOverlay.Apply"
                  Grid.Column="2"
                  Content="Apply"
                  MinHeight="44"
                  Command="{Binding ApplyCommand}" />
        </Grid>

      </Grid>
    </Border>
  </Grid>
</UserControl>
