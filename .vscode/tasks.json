{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/JitHubV3/JitHubV3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/JitHubV3/JitHubV3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-server (API)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/JitHubV3.Server/JitHubV3.Server.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/JitHubV3.Server",
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "https://localhost:5002"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "jithubv3-server",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Now listening on:",
          "endsPattern": "Application started"
        }
      }
    },
    {
      "label": "test-ui",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/JitHubV3.UITests/JitHubV3.UITests.csproj",
        "-v",
        "minimal"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
